{
  "name": "gition-ui",
  "version": "0.1.4",
  "description": "Zero-config, local web interface for managing Markdown/MDX documentation and tasks. Think Notion + Jira, but for your local files with real-time hot-reload and beautiful UI.",
  "keywords": [
    "documentation",
    "markdown",
    "mdx",
    "task-management",
    "kanban",
    "cli",
    "nextjs",
    "local-development",
    "hot-reload",
    "workspace"
  ],
  "homepage": "https://github.com/romainframe/gition#readme",
  "bugs": {
    "url": "https://github.com/romainframe/gition/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romainframe/gition.git"
  },
  "license": "MIT",
  "author": {
    "name": "Romain Untereiner",
    "email": "romain@untereiner.com",
    "url": "https://github.com/romainframe"
  },
  "bin": {
    "gition": "./bin/gition.js"
  },
  "files": [
    "bin/",
    "src/",
    "public/",
    "scripts/",
    ".next/",
    ".gition-manifest.json",
    "next.config.ts",
    "tsconfig.json",
    "tailwind.config.ts",
    "postcss.config.mjs",
    "components.json",
    "README.md",
    "USER_GUIDE.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "node scripts/generate-manifest.js && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build",
    "postinstall": "echo 'Welcome to Gition! Run \"npx gition init\" to get started.'",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.4",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/inquirer": "^9.0.8",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^6.0.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "inquirer": "^12.8.2",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.525.0",
    "marked": "^16.1.1",
    "mermaid": "^11.9.0",
    "next": "15.4.4",
    "next-intl": "^4.3.4",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "open": "^10.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-rehype": "^11.1.2",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
